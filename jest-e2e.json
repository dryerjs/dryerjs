{
  "moduleNameMapper": {
    "dryerjs": "<rootDir>/lib/index.ts"
  },
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".spec.ts$",
  "testPathIgnorePatterns": [
    "/node_modules/",
    "<rootDir>/lib/"
  ],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "<rootDir>/lib**/*.ts"
  ],
  "coveragePathIgnorePatterns": [
    ".spec.ts"
  ],
  "coverageDirectory": "./coverage/e2e",
  "coverageReporters": [
    "json",
    "html"
  ]
}
