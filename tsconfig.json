{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "outDir": "./dist",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2021",
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "paths": {
      "dryerjs": ["./lib/index.ts"],
    }
  }
}
