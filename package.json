{
  "name": "dryerjs",
  "version": "0.0.1",
  "description": "A platform for building GraphQL APIs with TypeScript and MongoDB in a declarative way.",
  "main": "dist/index.js",
  "type": "commonjs",
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vanpho93/dryerjs.git"
  },
  "scripts": {
    "start": "nodemon --exec ts-node -r tsconfig-paths/register -r dotenv/config ./src/example/main.ts",
    "format": "prettier 'src/**/*.ts' -w",
    "format:ci": "prettier 'src/**/*.ts' -l",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:ci": "eslint \"{src,apps,libs,test}/**/*.ts\" --max-warnings=0",
    "build": "tsc",
    "test": "jest",
    "e2e": "npm run test:e2e",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:debug": "NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NODE_ENV=test jest --config jest-e2e.json",
    "test:cov": "NODE_ENV=test npm run clean-cov && npm run test -- --coverage && npm run test:e2e -- --coverage && npm run collect-cov && npm run merge-cov",
    "clean-cov": "rm -rf coverage",
    "collect-cov": "mv coverage/unit/coverage-final.json coverage/unit.json && mv coverage/e2e/coverage-final.json coverage/e2e.json",
    "merge-cov": "nyc report -t coverage --report-dir coverage --reporter=text-summary --reporter=lcov",
    "show-cov": "open coverage/lcov-report/index.html",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "graphql",
    "typescript",
    "mongodb",
    "framework",
    "api",
    "server"
  ],
  "author": "vanpho93",
  "license": "MIT",
  "devDependencies": {
    "@shelf/jest-mongodb": "4.1.7",
    "@types/body-parser": "1.19.3",
    "@types/cors": "2.8.14",
    "@types/express": "4.17.17",
    "@types/jest": "29.5.5",
    "@types/supertest": "^2.0.13",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "dotenv": "16.3.1",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "29.7.0",
    "nodemon": "3.0.1",
    "nyc": "15.1.0",
    "prettier": "^3.0.3",
    "supertest": "6.3.3",
    "ts-jest": "29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.2.2",
    "semantic-release": "^22.0.5"
  },
  "dependencies": {
    "@apollo/server": "^4.9.3",
    "mongoose": "^7.5.3",
    "body-parser": "1.20.2",
    "cors": "2.8.5",
    "express": "4.18.2",
    "mongoose-paginate-v2": "^1.7.4",
    "reflect-metadata": "0.1.13"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/e2e/"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/e2e/",
      "<rootDir>/dist/",
      "<rootDir>/coverage/",
      "<rootDir>/example/",
      ".spec.ts"
    ],
    "testRegex": ".*.spec.ts$",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "d.ts"
    ],
    "coverageDirectory": "../coverage/unit",
    "testEnvironment": "node",
    "coverageReporters": [
      "json",
      "html"
    ]
  }
}
